<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Toggle Play -->

        <!-- not focused -->

            <!--  not focused / not pressed -->
        <item
            android:drawable="@drawable/button_play_notfocused_notpressed"
            android:state_checked="false"
            android:state_focused="false"
            android:state_pressed="false" />

            <!-- not focused / pressed -->
        <item
            android:drawable="@drawable/button_play_notfocused_pressed"
            android:state_checked="false"
            android:state_focused="false"
            android:state_pressed="true" />

        <!-- focused -->

            <!-- focused / not pressed -->
        <item
            android:drawable="@drawable/button_play_focused_notpressed"
            android:state_checked="false"
            android:state_focused="true" />

            <!-- focused / pressed -->
        <item
            android:drawable="@drawable/button_play_focused_pressed"
            android:state_checked="false"
            android:state_focused="true"
            android:state_pressed="true" />

    <!-- Toggle Pause -->

        <!-- not focused -->

            <!--  not focused / not pressed -->
            <item
                android:drawable="@drawable/button_pause_notfocused_notpressed"
                android:state_focused="false"
                android:state_pressed="false" />

            <!-- not focused / pressed -->
            <item
                android:drawable="@drawable/button_pause_notfocused_pressed"
                android:state_checked="true"
                android:state_focused="false"
                android:state_pressed="true" />

        <!-- focused -->

            <!-- focused / not pressed -->
            <item
                android:drawable="@drawable/button_pause_notfocused_pressed"
                android:state_checked="true"
                android:state_focused="true" />

            <!-- focused / pressed -->
            <item
                android:drawable="@drawable/button_pause_notfocused_pressed"
                android:state_checked="true"
                android:state_focused="true"
                android:state_pressed="true" />
</selector>



